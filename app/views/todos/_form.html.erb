<%= form_for @todo, :html => { :class => "form-horizontal todo", :id => "form_validate" } do |f| %>

    <% if @todo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :Name, :class => 'control-label' %>
    <div class="controls">

      <%= f.text_field :Name, :class => 'form-control required' %>
       
    </div>

    <%= error_span(@todo[:Name,]) %>
  </div>
  <div class="control-group">
    <%= f.label :Description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Description, :class => 'form-control required' %>
    </div>
    <%= error_span(@todo[:Description]) %>
  </div>
  <div class="control-group">
    <%= f.label :Price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Price, :class => 'form-control required' %>
    </div>
    <%= error_span(@todo[:Price]) %>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image %>
    </div>
    <%= error_span(@todo[:image]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            todos_path, :class => 'btn btn-danger' %>  
          

<% end %>
<script>
  $("#form_validate").validate();
</script>
